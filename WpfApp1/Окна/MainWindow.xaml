<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Главное_окно.StudentModel"
        xmlns:dm="clr-namespace:Главное_окно.DiseaseModel"
        xmlns:um="clr-namespace:Главное_окно.UserModel"
        xmlns:tm="clr-namespace:Главное_окно.TeacherModel"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:bo="clr-namespace:Главное_окно.Ресурсы_для_булинговой_логики"
        mc:Ignorable="d"
        Title="MainWindow" Height="470" Width="800"
        MinHeight="260" MinWidth="400"
        WindowStartupLocation="CenterScreen"
        Background="#1e1e1e"
        Foreground="White">

    <Window.Resources>
        <bo:BoolToYesNoConverter x:Key="BoolToYesNoConverter" />
        <bo:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <bo:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Общий стиль для текста -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Стиль для кнопок -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#0068AA"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для текстовых полей -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2d2d30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4"/>
        </Style>

        <!-- Стиль для комбобоксов -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#2d2d30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ContentPresenter Name="ContentSite"
                                      IsHitTestVisible="False"
                                      Content="{TemplateBinding SelectionBoxItem}"
                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                      ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                      Margin="5,3,35,3"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Left"/>
                            <ToggleButton Name="ToggleButton"
                                  Focusable="false"
                                  Grid.Column="0"
                                  IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                  ClickMode="Press"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Stretch"
                                  Width="30"
                                  Background="{TemplateBinding Background}"
                                  BorderBrush="{TemplateBinding BorderBrush}"
                                  BorderThickness="0">
                                <Grid>
                                    <Path x:Name="Arrow"
                                  Data="M 0 0 L 4 4 L 8 0 Z"
                                  Fill="White"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                                </Grid>
                            </ToggleButton>
                            <Popup Name="Popup"
                           Placement="Bottom"
                           IsOpen="{TemplateBinding IsDropDownOpen}"
                           AllowsTransparency="True"
                           Focusable="False"
                           PopupAnimation="Slide">
                                <Grid Name="DropDown"
                              SnapsToDevicePixels="True"
                              MinWidth="{TemplateBinding ActualWidth}"
                              MaxHeight="200"
                              Background="#2d2d30">
                                    <Border BorderThickness="1" BorderBrush="#444" Background="#2d2d30"/>
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" Background="#2d2d30"/>
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="Gray"/>
                                <Setter Property="Background" Value="#1a1a1a"/>
                                <Setter TargetName="Arrow" Property="Fill" Value="Gray"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ToggleButton" Property="BorderBrush" Value="#007acc"/>
                                <Setter TargetName="Arrow" Property="Fill" Value="#007acc"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="#252526"/>
            <Setter Property="AlternatingRowBackground" Value="#1e1e1e"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#444"/>
            <Setter Property="VerticalGridLinesBrush" Value="#444"/>
        </Style>

        <!-- Стиль для заголовков DataGrid -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>

        <!-- Стиль для ячеек DataGrid -->
        <Style TargetType="DataGridCell">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#0068AA"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для TabControl -->
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="BorderBrush" Value="#444"/>
        </Style>

        <!-- Стиль для TabItem -->
        <Style TargetType="TabItem">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="3,3,0,0"
                        Padding="{TemplateBinding Padding}">
                            <ContentPresenter x:Name="ContentSite"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"
                                      ContentSource="Header"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#1E1E1E"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#0068AA"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#3A3D41"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="Gray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- Стиль для Menu -->
        <Style TargetType="Menu">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Стиль для MenuItem -->
        <Style TargetType="MenuItem">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#aa9999"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Общий стиль для выравнивания содержимого ячеек по центру по вертикали -->
        <Style x:Key="CenterVerticalTextBlockStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5,0,0,0"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Background="#1e1e1e">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Menu>
                <MenuItem Header="Отчет" Padding="5 2 5 2">
                    <MenuItem Header="Создать отчет"
                              Click="btnCreateReport"/>
                </MenuItem>
            </Menu>
        </Grid>
        <Grid Grid.Row="1">
            <!-- Вкладка учеников -->
            <TabControl>
                <TabItem Header="Ученики">
                    <Grid Background="#1e1e1e" Name="StudentGrid">
                        <Grid.DataContext>
                            <vm:StudentViewModel />
                        </Grid.DataContext>
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="32"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <!-- Панель кнопок -->
                            <Grid Margin="0 0 0 10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <!-- Кнопочки -->
                                <StackPanel Orientation="Horizontal" Grid.Column="0">
                                    <Button Content="Добавить" Click="btnAddStudent" Width="70"/>
                                    <Button Content="Удалить" Click="btnRemoveStudent" Margin="5 0 0 0" Width="60"/>
                                    <Button Content="Редактировать" Click="btnEditStudent" Margin="5 0 0 0" Width="95"/>
                                </StackPanel>
                                <Button Content="Добавить болезнь" Click="btnAddDisease"
                                Grid.Column="1" Width="115"  HorizontalAlignment="Right"/>
                            </Grid>
                            <!-- Таблица студентов -->
                            <DataGrid Grid.Row="1"
                                      ItemsSource="{Binding Students}"
                                      SelectedItem="{Binding SelectedStudent, Mode=TwoWay}"
                                      AutoGenerateColumns="False"
                                      HeadersVisibility="Column"
                                      IsReadOnly="True"
                                      Margin="0 0 0 15"
                                      x:Name="StudentsGrid">
                                <DataGrid.Columns>
                                    <!-- ID -->
                                    <DataGridTextColumn Header="ID" 
                                                        Binding="{Binding IdStudent}"     
                                                        IsReadOnly="True">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <!-- Фамилия FirstName -->
                                    <DataGridTemplateColumn Header="Фамилия" 
                                                            SortMemberPath="FirstName">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <TextBox Text="{Binding FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         IsReadOnly="{Binding IsEditing, Converter={StaticResource InverseBoolConverter}}"
                                                         HorizontalAlignment="Stretch"
                                                         VerticalAlignment="Center"
                                                         BorderThickness="0"
                                                         Padding="2"
                                                         Background="Transparent">
                                                    </TextBox>
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <!-- Имя SecondName -->
                                    <DataGridTemplateColumn Header="Имя"
                                                            SortMemberPath="SecondName">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <TextBox Text="{Binding SecondName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         IsReadOnly="{Binding IsEditing, Converter={StaticResource InverseBoolConverter}}"
                                                         HorizontalAlignment="Stretch"
                                                         VerticalAlignment="Center"
                                                         BorderThickness="0"
                                                         Padding="2"
                                                         Background="Transparent"/>
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <!-- Отчество Surname -->
                                    <DataGridTemplateColumn Header="Отчество"
                                                            SortMemberPath="Surname">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <TextBox Text="{Binding Surname, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         IsReadOnly="{Binding IsEditing, Converter={StaticResource InverseBoolConverter}}"
                                                         HorizontalAlignment="Stretch"
                                                         VerticalAlignment="Center"
                                                         BorderThickness="0"
                                                         Padding="2"
                                                         Background="Transparent"/>
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <!-- Год рождения YearOfBirth -->
                                    <DataGridTemplateColumn Header="Год рождения"
                                                            SortMemberPath="YearOfBirth">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <TextBox Text="{Binding YearOfBirth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         IsReadOnly="{Binding IsEditing, Converter={StaticResource InverseBoolConverter}}"
                                                         HorizontalAlignment="Stretch"
                                                         VerticalAlignment="Center"
                                                         BorderThickness="0"
                                                         Padding="2"
                                                         Background="Transparent"/>
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <!-- Класс -->
                                    <DataGridTemplateColumn Header="Класс" 
                                                            SortMemberPath="StudentIdClass">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <ComboBox ItemsSource="{Binding DataContext.AllClasses, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                          SelectedValue="{Binding StudentIdClass, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                          SelectedValuePath="IdClass"
                                                          DisplayMemberPath="NameClass"
                                                          IsEnabled="{Binding IsEditingOnlyAdmin}"
                                                          VerticalAlignment="Center"
                                                          BorderThickness="0"
                                                          Background="Transparent"
                                                          Padding="2"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <!-- Кнопочка -->
                                    <DataGridTemplateColumn Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Button Content="Принять изменения" Width="130px" Height="20px" Margin="10, 0, 0, 0"
                                                        Click="btnConfirmStudent"
                                                        Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}">
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Grid>
                </TabItem>

                <!-- Вкладка Болезней -->
                <TabItem Header="Отметка заболеваний">
                    <Grid Background="#1e1e1e" Name="DiseaseGrid">
                        <Grid.DataContext>
                            <dm:DiseaseViewModel />
                        </Grid.DataContext>
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="32"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <!-- Панель кнопок -->
                            <Grid Margin="0 0 0 10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <!-- Кнопочки -->
                                <StackPanel Orientation="Horizontal" Grid.Column="0">
                                    <Button Content="Удалить" Click="btnRemoveDisease" Width="60"/>
                                    <Button Content="Редактировать" Click="btnEditDisease" Margin="5 0 0 0" Width="95"/>
                                </StackPanel>
                            </Grid>
                            <!-- Таблица болезней -->
                            <DataGrid Grid.Row="1"
                                      HeadersVisibility="Column"
                                      ItemsSource="{Binding Diseases}"
                                      SelectedItem="{Binding SelectedDisease, Mode=TwoWay}"
                                      AutoGenerateColumns="False"
                                      Margin="0 0 0 15"
                                      MinRowHeight="24"
                                      IsReadOnly="True">
                                <DataGrid.Columns>
                                    <!-- ID -->
                                    <DataGridTextColumn Header="ID" 
                                    Binding="{Binding IdDisease}"
                                    IsReadOnly="True">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <!-- Описание болезни DescriptionDisease -->
                                    <DataGridTextColumn Header="Описание болезни"
                                                        MaxWidth="250"
                                                        Binding="{Binding DescriptionDisease, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"     
                                                        IsReadOnly="True"
                                                        ElementStyle="{StaticResource CenterVerticalTextBlockStyle}"/>
                                    <!-- Дата DateDisease -->
                                    <DataGridTextColumn Header="Дата" 
                                                        Binding="{Binding DateDisease, StringFormat=d, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"     
                                                        IsReadOnly="True"
                                                        ElementStyle="{StaticResource CenterVerticalTextBlockStyle}"/>
                                    <!-- ID отсутствующего ученика DiseaseIdStudent -->
                                    <DataGridTextColumn Header="ID отсутствующего ученика"
                                                        Binding="{Binding DiseaseIdStudent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        IsReadOnly="True"
                                                        ElementStyle="{StaticResource CenterVerticalTextBlockStyle}"/>
                                    <!-- Тяжесть болезни HardDisease -->
                                    <DataGridTextColumn Header="Тяжесть болезни"
                                                        Binding="{Binding HardDisease, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged,
                                                                    Converter={StaticResource BoolToYesNoConverter}}" 
                                                        IsReadOnly="True" 
                                                        ElementStyle="{StaticResource CenterVerticalTextBlockStyle}"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Grid>
                </TabItem>

                <!-- Вкладка Пользователей -->
                <TabItem Header="Пользователи" Name="UserTab">
                    <Grid Background="#1e1e1e" Name="UserGrid">
                        <Grid.DataContext>
                            <um:UserViewModel/>
                        </Grid.DataContext>
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="32"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <!-- Панель кнопок -->
                            <Grid Margin="0 0 0 10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <!-- Кнопочки -->
                                <StackPanel Orientation="Horizontal" Grid.Column="0">
                                    <Button Content="Добавить" Click="btnAddUser" Width="70"/>
                                    <Button Content="Удалить" Click="btnRemoveUser" Margin="5 0 0 0" Width="60"/>
                                    <Button Content="Редактировать" Click="btnEditUser" Margin="5 0 0 0" Width="95"/>
                                </StackPanel>
                            </Grid>
                            <!-- Таблица Пользователей -->
                            <DataGrid Grid.Row="1"
                                      HeadersVisibility="Column"
                                      ItemsSource="{Binding UserData}"
                                      SelectedItem="{Binding SelectedUser, Mode=TwoWay}"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      Margin="0 0 0 15"
                                      x:Name="UsersGrid">
                                <DataGrid.Columns>
                                    <!-- ID -->
                                    <DataGridTextColumn Header="ID" 
                                    Binding="{Binding IdUser}"
                                    IsReadOnly="True">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <!-- Логин Login -->
                                    <DataGridTemplateColumn Header="Логин"
                                                            SortMemberPath="Login">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <TextBox Text="{Binding Login, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                             IsReadOnly="{Binding IsEditing, Converter={StaticResource InverseBoolConverter}}"
                                                             HorizontalAlignment="Stretch"
                                                             VerticalAlignment="Center"
                                                             BorderThickness="0"
                                                             Padding="2"
                                                             Background="Transparent"/>
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <!-- Пароль Password -->
                                    <DataGridTemplateColumn Header="Пароль"
                                                            SortMemberPath="Password">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <TextBox Text="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                             IsReadOnly="{Binding IsEditing, Converter={StaticResource InverseBoolConverter}}"
                                                             HorizontalAlignment="Stretch"
                                                             VerticalAlignment="Center"
                                                             BorderThickness="0"
                                                             Padding="2"
                                                             Background="Transparent"/>
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <!-- Роль UserIdRole -->
                                    <DataGridTemplateColumn Header="Роль"
                                                            SortMemberPath="UserIdRole">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <ComboBox ItemsSource="{Binding DataContext.Roles, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                          SelectedValue="{Binding UserIdRole, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                          SelectedValuePath="IdRole"
                                                          DisplayMemberPath="NameRole"
                                                          IsEnabled="{Binding IsEditing}" 
                                                          VerticalAlignment="Center"
                                                          Padding="3"
                                                          BorderThickness="0"
                                                          Background="Transparent"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <!-- Кнопочка -->
                                    <DataGridTemplateColumn Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Button Content="Принять изменения" Width="130px" Height="20px" Margin="10, 0, 0, 0"
                                                            Click="btnConfirmUser"
                                                            Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}">
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Grid>
                </TabItem>

                <!-- Таблица Учителя -->
                <TabItem Header="Учителя" Name="TeacherTab">
                    <Grid Background="#1e1e1e" Name="TeacherGrid">
                        <Grid.DataContext>
                            <tm:TeacherViewModel/>
                        </Grid.DataContext>
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="32"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <!-- Панель кнопок -->
                            <Grid Margin="0 0 0 10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <!-- Кнопочки -->
                                <StackPanel Orientation="Horizontal" Grid.Column="0">
                                    <Button Content="Добавить" Click="btnAddTeacher" Width="70"/>
                                    <Button Content="Удалить" Click="btnRemoveTeacher" Margin="5 0 0 0" Width="60"/>
                                    <Button Content="Редактировать" Click="btnEditTeacher" Margin="5 0 0 0" Width="95"/>
                                </StackPanel>
                            </Grid>
                            <!-- Таблица студентов -->
                            <DataGrid Grid.Row="1"
                                      ItemsSource="{Binding Teachers}"
                                      SelectedItem="{Binding SelectedTeacher, Mode=TwoWay}"
                                      AutoGenerateColumns="False"
                                      HeadersVisibility="Column"
                                      IsReadOnly="True"
                                      Margin="0 0 0 15"
                                      x:Name="TeachersGrid">
                                <DataGrid.Columns>
                                    <!-- ID -->
                                    <DataGridTextColumn Header="ID" 
                                            Binding="{Binding IdTeacher}"     
                                            IsReadOnly="True">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <!-- Фамилия FirstName -->
                                    <DataGridTemplateColumn Header="Фамилия" 
                                                SortMemberPath="FirstName">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <TextBox Text="{Binding FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                             IsReadOnly="{Binding IsEditing, Converter={StaticResource InverseBoolConverter}}"
                                                             HorizontalAlignment="Stretch"
                                                             VerticalAlignment="Center"
                                                             BorderThickness="0"
                                                             Padding="2"
                                                             Background="Transparent">
                                                    </TextBox>
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <!-- Имя SecondName -->
                                    <DataGridTemplateColumn Header="Имя"
                                                SortMemberPath="SecondName">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <TextBox Text="{Binding SecondName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                             IsReadOnly="{Binding IsEditing, Converter={StaticResource InverseBoolConverter}}"
                                                             HorizontalAlignment="Stretch"
                                                             VerticalAlignment="Center"
                                                             BorderThickness="0"
                                                             Padding="2"
                                                             Background="Transparent"/>
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <!-- Отчество Surname -->
                                    <DataGridTemplateColumn Header="Отчество"
                                                SortMemberPath="Surname">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <TextBox Text="{Binding Surname, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                             IsReadOnly="{Binding IsEditing, Converter={StaticResource InverseBoolConverter}}"
                                                             HorizontalAlignment="Stretch"
                                                             VerticalAlignment="Center"
                                                             BorderThickness="0"
                                                             Padding="2"
                                                             Background="Transparent"/>
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <!-- Год рождения YearOfBirth -->
                                    <DataGridTemplateColumn Header="Год рождения"
                                                SortMemberPath="YearOfBirth">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <TextBox Text="{Binding YearOfBirth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                             IsReadOnly="{Binding IsEditing, Converter={StaticResource InverseBoolConverter}}"
                                                             HorizontalAlignment="Stretch"
                                                             VerticalAlignment="Center"
                                                             BorderThickness="0"
                                                             Padding="2"
                                                             Background="Transparent"/>
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <!-- Класс TeacherIdClass -->
                                    <DataGridTemplateColumn Header="Класс" 
                                                SortMemberPath="TeacherIdClass">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <ComboBox ItemsSource="{Binding DataContext.AllClasses, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                          SelectedValue="{Binding TeacherIdClass, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                          SelectedValuePath="IdClass"
                                                          DisplayMemberPath="NameClass"
                                                          IsEnabled="{Binding IsEditing}"
                                                          VerticalAlignment="Center"
                                                          BorderThickness="0"
                                                          Background="Transparent"
                                                          Padding="2"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <!-- Пользователь TeacherIdUser -->
                                    <DataGridTemplateColumn Header="Пользователь" 
                                                            SortMemberPath="TeacherIdUser">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <ComboBox ItemsSource="{Binding DataContext.AllUsers, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                          SelectedValue="{Binding TeacherIdUser, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                          SelectedValuePath="IdUser"
                                                          DisplayMemberPath="DisplayName"
                                                          IsEnabled="{Binding IsEditing}"
                                                          VerticalAlignment="Center"
                                                          BorderThickness="0"
                                                          Background="Transparent"
                                                          Padding="2"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <!-- Кнопочка -->
                                    <DataGridTemplateColumn Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Button Content="Принять изменения" Width="130px" Height="20px" Margin="10, 0, 0, 0"
                                                            Click="btnConfirmTeacher"
                                                            Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}">
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Grid>
                </TabItem>
            </TabControl>

            <!-- Текущий пользователь -->
            <TextBlock Text="??user??" Name="userInfo"
                       HorizontalAlignment="Right" VerticalAlignment="Bottom"
                       Margin="0 0 15 10"/>
        </Grid>
    </Grid>
</Window>