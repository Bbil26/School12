<Window x:Class="Главное_окно.DiseaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Главное_окно"
        mc:Ignorable="d"
        Title="Добавление записи о заболевании" Height="350" Width="500">
    <Grid>
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="50"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Label Content="Описание болезни" Grid.Row="0"/>
            <TextBox Grid.Column="1" Margin="10 0 0 0"
             AcceptsReturn="True"
             TextWrapping="Wrap"
             VerticalScrollBarVisibility="Auto"/>

            <TextBlock Text="Тяжелая болезнь" Grid.Row="1" Margin="0 20 0 20"/>
            <CheckBox Content="Да" Grid.Row="1" Grid.Column="1" Margin="0 20 0 20"/>

            <TextBlock Text="Выбрать дату" Grid.Row="2" Grid.Column="0"/>
            <DatePicker Grid.Row="2" Grid.Column="1" Height="30" SelectedDate="{x:Static sys:DateTime.Now}"/>

            <Button Content="Добавить запись" 
                    Grid.Row="3" Grid.ColumnSpan="2"
                    Height="26" Width="120"/>
        </Grid>
        
        
    </Grid>
</Window>
