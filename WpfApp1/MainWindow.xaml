<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Главное_окно.StudentModel"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:StudentViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Menu>
                <MenuItem Header="Отчет">
                    <MenuItem Header="Создать отчет"></MenuItem>
                </MenuItem>
            </Menu>
        </Grid>
        <Grid Grid.Row="1">
            <TabControl>
                <TabItem Header="Работа с БД">
                    <Grid Background="#FFE5E5E5">
                        <Grid Margin="10">
                            
                            <Grid.RowDefinitions>
                                <RowDefinition Height="32"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Панель кнопок -->
                            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                                <Button Content="Добавить" Click="btnAddStudent" Width="70"/>
                                <Button Content="Удалить" Click="btnRemoveStudent" Margin="5 0 0 0" Width="60"/>
                                <Button Content="Редактировать" Click="btnEditStudent" Margin="5 0 0 0" Width="95"/>
                            </StackPanel>

                            <!-- Таблица студентов -->
                            <DataGrid Grid.Row="1"
                              ItemsSource="{Binding Students}"
                              SelectedItem="{Binding SelectedStudent, Mode=TwoWay}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              x:Name="StudentsGrid">
                                <DataGrid.Columns>
                                    <!-- ID -->
                                    <DataGridTextColumn Header="ID" 
                                                        Binding="{Binding IdStudent}"     
                                                        IsReadOnly="True"/>

                                    <!-- Фамилия FirstName -->
                                    <DataGridTemplateColumn Header="Фамилия">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <TextBox Text="{Binding FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         IsReadOnly="{Binding IsEditing, Converter={StaticResource InverseBoolConverter}}"
                                                         HorizontalAlignment="Stretch"
                                                         VerticalAlignment="Center"
                                                         BorderThickness="0"
                                                         Padding="2"
                                                         Background="Transparent">
                                                    </TextBox>
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- Имя SecondName -->
                                    <DataGridTemplateColumn Header="Имя">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <TextBox Text="{Binding SecondName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         IsReadOnly="{Binding IsEditing, Converter={StaticResource InverseBoolConverter}}"
                                                         HorizontalAlignment="Stretch"
                                                         VerticalAlignment="Center"
                                                         BorderThickness="0"
                                                         Padding="2"
                                                         Background="Transparent"/>
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- Отчество Surname -->
                                    <DataGridTemplateColumn Header="Отчество">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <TextBox Text="{Binding Surname, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         IsReadOnly="{Binding IsEditing, Converter={StaticResource InverseBoolConverter}}"
                                                         HorizontalAlignment="Stretch"
                                                         VerticalAlignment="Center"
                                                         BorderThickness="0"
                                                         Padding="2"
                                                         Background="Transparent"/>
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- Год рождения YearOfBirth -->
                                    <DataGridTemplateColumn Header="Год рождения">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <TextBox Text="{Binding YearOfBirth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         IsReadOnly="{Binding IsEditing, Converter={StaticResource InverseBoolConverter}}"
                                                         HorizontalAlignment="Stretch"
                                                         VerticalAlignment="Center"
                                                         BorderThickness="0"
                                                         Padding="2"
                                                         Background="Transparent"/>
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- Класс -->
                                    <DataGridTemplateColumn Header="Класс">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <TextBox Text="{Binding StudentIdClass, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         IsReadOnly="{Binding IsEditingOnlyAdmin, Converter={StaticResource InverseBoolConverter}}"
                                                         HorizontalAlignment="Stretch"
                                                         VerticalAlignment="Center"
                                                         BorderThickness="0"
                                                         Padding="2"
                                                         Background="Transparent"/>
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    
                                    <!-- Кнопочка -->
                                    <DataGridTemplateColumn Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Button Content="Принять изменения" Width="130px" Height="20px" Margin="10, 0, 0, 0"
                                                        Click="btnConfirmStudent"
                                                        Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}">
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Grid>
                </TabItem>
                
                <TabItem Header="Отметка заболеваний">
                    <Grid Background="#FFE5E5E5">
                        <Label Name="test" Content="test"/>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
