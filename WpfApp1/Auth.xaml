<Window x:Class="Главное_окно.Auth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Главное_окно"
        mc:Ignorable="d"
        Title="Авторизация" Height="270" Width="500"
        Background="#ccc" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="185px"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30px"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="25px"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Name="l_login" Content="Логин" FontSize="16px" Foreground="#222" FontWeight="Medium"
               Grid.Column="1" Grid.Row="2"/>
        <Label Name="l_password" Content="Пароль" FontSize="16px" Foreground="#222" FontWeight="Medium"
               Grid.Column="1" Grid.Row="3"/>

        <TextBox Name="login" Grid.Row="2" Grid.Column="2" Height="25px" 
                 FontSize="15px" VerticalContentAlignment="Center" Loaded="loginTextBox_Loaded"/>
        <PasswordBox Name="password" Grid.Row="3" Grid.Column="2" Height="25px" 
                     FontSize="15px" VerticalContentAlignment="Center"/>
        
        <Button Name="btnAuth" Content="Войти" FontWeight="Medium"
                Grid.ColumnSpan="2" Grid.Row="4" Grid.Column="1" Width="100px" 
                Height="30px" Click="btnAuth_Click" IsDefault="True" Loaded="AfterLoadBtn"/>

        <Label Name="errorAuth" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2"
               Content="Не правильный логин или пароль" Foreground="#f44" 
               HorizontalAlignment="Center" FontSize="11px" FontWeight="Medium"
               Visibility="Hidden"/>

    </Grid>
</Window>
